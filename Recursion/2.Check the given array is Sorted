#include<iostream>
using namespace std;
bool IsSorted(int arr[],int size){
    if(size==0 || size==1)
    return true;
    if(arr[0]>arr[1])
    return false;
    return IsSorted(arr+1,size-1);
}

int main(){
    int arr[5]={0,1,2,3,1};
    int n = sizeof(arr)/sizeof(arr[0]);
    if(IsSorted(arr, n))
    cout<<"the array is sorted";
    else
    cout<<"the array is not sorted";
    return 0;

}
